  $(document).ready(function() {
  $(".accordion-tab > span").on("click", function() {
    if ($(this).hasClass("testings")) {
      $(this).removeClass("testings");
      $(this)
        .siblings(".accordion-content")
        .hide(200);
      $(".accordion-tab > span i")
        .removeClass("fa-chevron-left")
        .addClass("fa-chevron-down");
    } else {
      $(".accordion-tab > span i")
        .removeClass("fa-minus")
        .addClass("fa-chevron-down");
      $(this)
        .find("i")
        .removeClass("fa-chevron-down")
        .addClass("fa-chevron-left");
      $(".accordion-tab > span").removeClass("testings");
      $(this).addClass("testings");
      $(".accordion-content").hide(200);
      $(this)
        .siblings(".accordion-content")
        .show(200);
    }
  });



});