<section class="about-page-wrapper">
  {% if section.settings.show_breadcrumb %}
    <div class="wrapper">
  {% include 'breadcrumb' %}
    </div>
  {% endif %}
  {% if section.settings.banner_img %}
  <div class="banner-wr">
    <img src="{{ section.settings.banner_img | img_url:'' }}" alt="" />
  </div>
  {% endif %}
  <div class="wrapper">
    <div class="about-page-info">
      {% for block in section.blocks %}
      <div class="about-page-wr">
        <div class="about-img">
          <img src="{{ block.settings.image | img_url:'' }}" alt="" />
        </div>
        <div class="about-content">
          <h2>{{ block.settings.heading }}</h2>
          <div>{{ block.settings.content }}</div>
          {% if block.settings.url != blank and block.settings.label != blank %}
          <a href="{{ block.settings.url }}" class="btn btn-primary">{{ block.settings.label }}</a>
           {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "About us",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_breadcrumb",
        "label": "Show Breadcrumb",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "banner_img",
        "label": "Banner Image"
      }
    ],
    "blocks":[
      {
        "type": "about",
        "name": "About Us",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Heading",
            "label": "Heading"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
          {
            "type":"url",
            "id":"url",
            "label":"Link"
          },
          {
            "type": "text",
            "id": "label",
            "label": "Label"
          }
        ]
      }
    ]
  }
{% endschema %}

