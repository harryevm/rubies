<div class="bundle-products">
  {% for product in collections.bundle-products.products %}
    {% assign current_variant = product.selected_or_first_available_variant %}
    <div class="bundle-wrapper">
      <div class="bundle-img"><img src="{{ product.featured_image | img_url: '' }}" alt="{{product.featured_image.alt}}" /></div>
      <div class="bundle-info">
        <h3>{{ product.title }}</h3>
        <div class="selection-wrapper price product-single__price-{{ section.id }}">
          {% unless section_onboarding %}
            <span class="money" id="ProductPrice-{{ section.id }}" data-ProductPrice itemprop="price" content="{{ current_variant.price | money_with_currency | remove: ',' }}">{{ current_variant.price | money_with_currency }}  </span>
          {% else %}
            <span class="money" id="ProductPrice-{{ section.id }}" data-ProductPrice itemprop="price" content="{{ 1999 | money_with_currency | remove: ',' }}">{{ 1999 | money }}</span>
          {% endunless %}
          
          {% if current_variant.compare_at_price > current_variant.price %}
            <p id="ComparePrice-{{ section.id }}" data-ComparePrice style="display:inline-block;">
              <span class="compareprice__label">{{ 'products.product.compare_at' | t }} </span><span class="money">{{ current_variant.compare_at_price | money }}</span>
            </p>
          {% else %}
            <p id="ComparePrice-{{ section.id }}" data-ComparePrice style="display:none;">
              <span class="compareprice__label">{{ 'products.product.compare_at' | t }} </span><span class="money">{{ current_variant.compare_at_price | money }}</span>
            </p>
          {% endif %}
        </div>
      </div>
      <a href="{{ product.url }}">Add</a>
    </div>
  {% endfor %}
</div>

<style>
  .bundle-products { display: flex; align-items: flex-start; justify-content: space-between; }
  .bundle-products>* { min-width: 48%; }
  .bundle-products.slick-initialized  { display: block; }
  .bundle-wrapper { display: flex !important; flex-wrap: wrap; justify-content: space-between; align-items: center; margin: 0 10px; }
  .bundle-wrapper>* { width: 48%; }
  .bundle-wrapper>a { display: block; text-align: center; text-decoration: none; border: 1px solid #040F21; border-radius: 4px; width: 100%; padding: 10px; color: #040F21; margin-top: 15px; }
  .bundle-info h3 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical; font-size: 15px; line-height: 20px; font-weight: 500 !important; }
  .bundle-info span.money { font-weight: 600; }
  ul.slick-dots { display: flex; list-style: none; align-items: center; justify-content: center; margin-top: 20px; }
  ul.slick-dots li { font-size: 0; appearance: none; margin: 0 2px; display: block; width: 10px !important; height: 10px !important; background: rgb(4 15 33 / 20%); border-radius: 50%; cursor: pointer; }
  ul.slick-dots li button { font-size: 0; border: none; padding: 10px 0; background: transparent; }
  ul.slick-dots li.slick-active { background: #040F21; }
  
</style>
